                <to control="1" key="Z" />
            </transform>
            <transform>
                <from command="1" key="Period" />
                <to control="1" key="Period" />
            </transform>
            <transform>
                <from command="1" key="Comma" />
                <to control="1" key="Comma" />
            </transform>
        </transformations>
    </layout>
